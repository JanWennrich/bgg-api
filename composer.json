{
  "name": "jan-wennrich/bgg-api",
  "description": "BoardGameGeek.com API Client Library",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Jan Wennrich",
      "homepage": "https://janwennrich.github.io/"
    },
    {
      "name": "Artur Jedlinski",
      "email": "artur@jedlinski.pl"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-simplexml": "*",
    "guzzlehttp/guzzle": "^7.10",
    "psr/log": "^1.1 || ^2.0 || ^3.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48",
    "friendsofphp/php-cs-fixer": "^3.92",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "2.1.33",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpunit/phpunit": "^12.5",
    "rector/rector": "^2.3",
    "shipmonk/composer-dependency-analyser": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "JanWennrich\\BoardGameGeekApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JanWennrich\\BoardGameGeekApi\\Test\\": "tests/src/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
